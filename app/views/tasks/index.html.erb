<header class="site-header">
    <h1>Task List</h1>
</header>
<dialog>
  <form method="POST" action="/tasks">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
      <label for="task">Task Name</label>
      <input id="task" name="task" type="text" required>
    </div>
    <div>
      <select name="state">
        <% @status.each_with_index do |s,i| %>
        <option value="<%= s %>"><%= s %></option>
        <% end %>
      </select>
      <label>Task State</label>
    </div>
    <div>
      <input type="date" name="limit_date" required>
      <label>Task Limit Day</label>
    </div>
    <p>
      <button type="submit">create</button>
    </p>
  </form>
  <button id="close">モーダルダイアログを閉じる</button>
</dialog>
<button id="show">タスク作成</button>
<!-- flashメッセージを表示 -->
<% flash.each do |msg| %>
<p><%= msg %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>状態</th>
      <th>期限</th>
      <th>タスク</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= t.state %></td>
      <td><%= t.limit_date %></td>
      <td><%= t.task %></td>
      <td>
        <!-- 次のタスク詳細取得画面へのリンク -->
        <a href="/tasks/<%= t.id %>"><i class="fa fa-check-circle-o "></i></a>
      </td>
      <td>
        <form method="POST" action="/tasks/<%= t.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit"><i class="fa fa-trash-o "></i> </button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<style>
.site-header{
    background: #800000;
    color: #FFF;
}
</style>
<script>
var dialog = document.querySelector('dialog');
var btn_show = document.getElementById('show');
var btn_close = document.getElementById('close');
btn_show.addEventListener('click', function() {
  dialog.showModal();
}, false);
btn_close.addEventListener('click', function() {
  dialog.close();
}, false);
</script>