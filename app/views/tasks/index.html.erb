<dialog style="border:none;
  border-radius: 0 0 10px 10px;">
<div style="margin: -20px -16px 0;
background-color: #4b3b3b;
border-radius: 10px 10px 0 0;
color: white;">
  <br/>
  <button id="close"
  class="clear-decoration"
  style="display: block;margin: 4px 0 0 auto;">
    <i class="fa fa-close fa-lg " style="color: white;"></i>
  </button>
  <p style="margin-top: -15px;margin-left: 10px;">新規作成</p>
  </div>
  <%= form_for(@task) do |f| %>
      <div class="input-field col s6">
        <%= f.label 'タスク' %>
        <div>
          <%= f.text_field :task, :required => true %>
        </div>
      </div>

      <div class="input-field col s6">
       <%= f.label '期日' %>
        <div>
        <%= f.datetime_field :limit_date, class: "datepicker", :required => true %>
        </div>
     </div>

      <div class="input-field col s6">
        <%= f.label 'ステータス' %>
        <div>
          <%= f.select(:state, @status) %>
        </div>
      </div>

      <div class="input-field col s6">
        <%= f.label '説明' %>
        <div>
          <%= f.text_area :description %>
        </div>
      </div>
     <p>
      <%= f.submit "作成", class: "insert" %>
     </p>
  <% end %>
</dialog>
<section>
  <a class="show" id="show">タスク作成</a>
</section>
<p></p>
<table style="margin: auto;">
  <thead>
    <tr>
      <th>ステータス</th>
      <th>期日</th>
      <th style="width: 200px">タスク</th>
      <th class="icon"></th>
      <th class="icon"></th>
      <th class="icon"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= t.state %></td>
      <td><%= t.limit_date %></td>
      <td><%= t.task %></td>
      <td class="icon">
        <% if t.state != '完了' %>    
        <%= form_for(t, url: "/tasks/#{t.id}", html: { method: 'PUT' }) do |f| %>
        <input type="hidden" name="task[state]" value="完了">
        <button type="submit"  class="clear-decoration"  title="完了！">
            <i class="fa fa-check-circle-o fa-lg "></i>
        </button>
        <% end %>
        <% end %>
      </td>
      <td class="icon">
        <!-- 次のタスク詳細取得画面へのリンク -->
        <a href="/tasks/<%= t.id %>" title="編集する" style="color: rgb(0, 0, 0);"><i class="fa fa-pencil-square-o fa-lg "></i> </a>
      </td>
      <td class="icon">
        <form method="POST" action="/tasks/<%= t.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="clear-decoration" title="削除する"
           onclick="return confirm('タスク「<%= t.task %>」を削除します。よろしいですか？')">
            <i class="fa fa-trash-o fa-lg "></i>
          </button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<style>
section {
  max-width: 300px;
  margin: 0 auto;
}
a.show {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50px;
  position: relative;
  background: #4b3b3b;
  border: 1px solid #4b3b3b;
  border-radius: 30px;
  box-sizing: border-box;
  padding: 0 45px 0 25px;
  color: #fff;
  font-size: 16px;
  letter-spacing: 0.1em;
  line-height: 1.3;
  text-align: left;
  text-decoration: none;
  transition-duration: 0.3s;
}
a.show:before {
  content: '';
  width: 8px;
  height: 8px;
  border: 0;
  border-top: 2px solid #fff;
  border-right: 2px solid #fff;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  right: 25px;
  margin-top: -6px;
}
a.show:hover {
  background: #fff;
  color: #4b3b3b;
}
a.show:hover:before {
  border-top: 2px solid #4b3b3b;
  border-right: 2px solid #4b3b3b;
}
.insert{
    font-size: 1em;
    padding: 10px 30px;
    color: #fff;
    background: #830707;
    border: 1px solid #830707;
    border-radius: 5px;
    display: block;
    margin: 0 0 0 auto;
}
.insert:hover {
  background: #fff;
  color: #4b3b3b;
}
textarea{
  width: 550px;
  height: 50px;
}
</style>
<script>
var dialog = document.querySelector('dialog');
var btn_show = document.getElementById('show');
var btn_close = document.getElementById('close');
btn_show.addEventListener('click', function() {
  dialog.showModal();
}, false);
btn_close.addEventListener('click', function() {
  dialog.close();
}, false);

var elems = document.querySelectorAll('.datepicker')
var min   = new Date()
var instances = M.Datepicker.init(elems, {
  autoClose      : true,
  format         : 'yyyy/m/d',
  minDate        : min,
});
</script>