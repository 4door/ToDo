<header class="site-header">
  <h1>&nbsp;Task List</h1>
</header>
<dialog>
  <button id="close"
  class="clear-decoration"
  style="display: block;margin: 0 0 0 auto;">
    <i class="fa fa-close fa-lg "></i>
  </button>
  <p style="margin-top: -15px;">新規作成</p>
  <form method="POST" action="/tasks">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
      <label for="task">タイトル</label>
      <input id="task" name="task" type="text" required>
    </div>
    <div>
      <label>ステータス</label>
      <select name="state">
        <% @status.each_with_index do |s,i| %>
        <option value="<%= s %>"><%= s %></option>
        <% end %>
      </select>
    </div>
    <div>
      <label>期日</label>
      <input type="date" name="limit_date" required>
    </div>
    <p>
      <button
      type="submit"
      style="display: block;margin: 0 0 0 auto;">
        作成
      </button>
    </p>
  </form>
</dialog>
<section>
  <a class="show" id="show">タスク作成</a>
</section>
<p></p>
<!-- flashメッセージを表示 -->
<% flash.each do |type, msg| %>
<p style="text-align: center;"><%= msg %></p>
<% end %>
<table style="margin: auto;">
  <thead>
    <tr>
      <th>ステータス</th>
      <th>期日</th>
      <th style="width: 200px">タスク</th>
      <th class="icon"></th>
      <th class="icon"></th>
      <th class="icon"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= t.state %></td>
      <td><%= t.limit_date %></td>
      <td><%= t.task %></td>
      <td class="icon">
        <% if t.state != 'done' %>
        <%= form_for(t, url: "/tasks/#{t.id}", html: { method: 'PUT' }) do |f| %>
        <input type="hidden" name="task" value="<%= t.task %>">
        <input type="hidden" name="state" value="done">
        <input type="hidden" name="date" value="<%= t.limit_date %>">
        <button type="submit" class="clear-decoration">
          <i class="fa fa-check-circle-o fa-lg "></i>
        </button>
        <% end %>
        <% end %>
      </td>
      <td class="icon">
        <!-- 次のタスク詳細取得画面へのリンク -->
        <a href="/tasks/<%= t.id %>" style="color: rgb(0, 0, 0);"><i class="fa fa-pencil-square-o fa-lg "></i> </a>
      </td>
      <td class="icon">
        <form method="POST" action="/tasks/<%= t.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="clear-decoration"
           onclick="return confirm('タスク「<%= t.task %>」を削除します。よろしいですか？')">
            <i class="fa fa-trash-o fa-lg "></i>
          </button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<style>
section {
  max-width: 300px;
  margin: 0 auto;
}
a.show {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50px;
  position: relative;
  background: #e8a48b;
  border: 1px solid #e8a48b;
  border-radius: 30px;
  box-sizing: border-box;
  padding: 0 45px 0 25px;
  color: #fff;
  font-size: 16px;
  letter-spacing: 0.1em;
  line-height: 1.3;
  text-align: left;
  text-decoration: none;
  transition-duration: 0.3s;
}
a.show:before {
  content: '';
  width: 8px;
  height: 8px;
  border: 0;
  border-top: 2px solid #fff;
  border-right: 2px solid #fff;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  right: 25px;
  margin-top: -6px;
}
a.show:hover {
  background: #fff;
  color: #e8a48b;
}
a.show:hover:before {
  border-top: 2px solid #e8a48b;
  border-right: 2px solid #e8a48b;
}
</style>
<script>
var dialog = document.querySelector('dialog');
var btn_show = document.getElementById('show');
var btn_close = document.getElementById('close');
btn_show.addEventListener('click', function() {
  dialog.showModal();
}, false);
btn_close.addEventListener('click', function() {
  dialog.close();
}, false);
</script>