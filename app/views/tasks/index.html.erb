<header class="site-header">
    <h1>Task List</h1>
</header>
<dialog>
  <form method="POST" action="/tasks">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
      <label for="task">Task Name</label>
      <input id="task" name="task" type="text" required>
    </div>
    <div>
      <select name="state">
        <% @status.each_with_index do |s,i| %>
        <option value="<%= s %>"><%= s %></option>
        <% end %>
      </select>
      <label>Task State</label>
    </div>
    <div>
      <input type="date" name="limit_date" required>
      <label>Task Limit Day</label>
    </div>
    <p>
      <button type="submit">create</button>
    </p>
  </form>
  <button id="close">モーダルダイアログを閉じる</button>
</dialog>
<button id="show">タスク作成</button>
<p></p>
<!-- flashメッセージを表示 -->
<% flash.each do |type, msg| %>
<p><%= msg %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>状態</th>
      <th>期限</th>
      <th>タスク</th>
      <th class="icon"></th>
      <th class="icon"></th>
      <th class="icon"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= t.state %></td>
      <td><%= t.limit_date %></td>
      <td><%= t.task %></td>
      <td class="icon">
        <% if t.state != 'done' %>
        <%= form_for(t, url: "/tasks/#{t.id}", html: { method: 'PUT' }) do |f| %>
        <input type="hidden" name="task" value="<%= t.task %>">
        <input type="hidden" name="state" value="done">
        <input type="hidden" name="date" value="<%= t.limit_date %>">
        <button type="submit" class="clear-decoration">
          <i class="fa fa-check-circle-o fa-2 "></i>
        </button>
        <% end %>
        <% end %>
      </td>
      <td class="icon">
        <!-- 次のタスク詳細取得画面へのリンク -->
        <a href="/tasks/<%= t.id %>"><i class="fa fa-pencil-square-o fa-2 "></i> </a>
      </td>
      <td class="icon">
        <form method="POST" action="/tasks/<%= t.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="clear-decoration">
            <i class="fa fa-trash-o fa-2 "></i>
          </button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<style>
.site-header{
    background: #800000;
    color: #FFF;
}
.clear-decoration {
    border: none;  /* 枠線を消す */
    outline: none; /* クリックしたときに表示される枠線を消す */
    background: transparent; /* 背景の灰色を消す */
}
</style>
<script>
var dialog = document.querySelector('dialog');
var btn_show = document.getElementById('show');
var btn_close = document.getElementById('close');
btn_show.addEventListener('click', function() {
  dialog.showModal();
}, false);
btn_close.addEventListener('click', function() {
  dialog.close();
}, false);
</script>