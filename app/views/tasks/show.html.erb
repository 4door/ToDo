<p
style="background-color: #feffd4;
width: 300px;
margin: 0 auto;">
タスク詳細</p>
  <%= form_for(@task) do |f| %>
      <div class="input-field col s6">
        <%= f.label 'タスク' %>
        <%= f.text_field :task, :required => true %>
      </div>

      <div class="input-field col s6">
        <%= f.label 'ステータス' %>
        <%= f.select(:state, @status) %>
      </div>

      <div class="input-field col s6">
       <%= f.label '期日' %>
       <%= f.datetime_field :limit_date, class: "datepicker", :required => true %>
     </div>

      <div class="input-field col s6">
        <%= f.label '説明' %>
        <%= f.text_field :description %>
      </div>
     <p>
      <a href="/tasks" class="back">TOPへ戻る</a>
      <%= f.submit "更新", class: "update" %>
     </p>
  <% end %>
<style>
div{
  width: 300px;
  margin: 0 auto;
}
p{
  text-align: center;
}
.back{
  font-size: 1em;
  padding: 13px 30px;
  color: #fff;
  background: #a9abae;
  border: 1px solid #a9abae;
  border-radius: 5px;
  text-decoration: none;
}
.back:hover {
  background: #fff;
  color: #a9abae;
}
.update{
  font-size: 1em;
  padding: 10px 30px;
  color: #fff;
  background: #e8a48b;
  border: 1px solid #e8a48b;
  border-radius: 5px;
}
.update:hover {
  background: #fff;
  color: #e8a48b;
}
