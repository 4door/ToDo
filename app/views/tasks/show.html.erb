<div class="container">
  <p
  style="background-color: #4b3b3b;
  color: white;
  margin: 0 auto;
  font-size: 1.25rem">
  タスク詳細</p>
  <%= form_for(@task) do |f| %>
    <div>
      <%= f.label '作成日' %>
      <%= f.datetime_field :created_at, class: "text-field", disabled: "disabled", :required => true %>

      <%= f.label '更新日' %>
      <%= f.datetime_field :updated_at, class: "text-field", disabled: "disabled", :required => true %>
    </div><br/>

    <div class="input-field col s6">
      <%= f.label 'タスク' %>
      <div>
        <%= f.text_field :task, class: "col", :required => true %>
      </div>
    </div>

    <div class="input-field col s6">
      <%= f.label '期日' %>
      <div>
        <%= f.date_field :limit_date, class: "datepicker", :required => true %>
      </div>
    </div>

    <div class="input-field col s6">
      <%= f.label 'ステータス' %>
      <div>
        <%= f.select(:state, @status) %>
      </div>
    </div>

    <div class="input-field col s6", style="margin-top: 5px;">
      <%= f.label '説明' %>
      <div>
        <%= f.text_area :description %>
      </div>
    </div>
    <br/>
    <a href="/tasks" class="back">TOPへ戻る</a>
    <%= f.submit "更新", class: "update" %>
  <% end %>
</div>
<style>
.container{
  width: 650px;
  margin: 0 auto;
}
p{
  text-align: center;
  border-radius: 10px 10px 0 0;
}
.text-field{
  border: none;
  background-color: #eaeaea;
}
.back{
  margin-left: 150px;
  font-size: 1em;
  padding: 12px 30px;
  color: #fff;
  background: #756969;
  border: 1px solid #756969;
  border-radius: 5px;
  text-decoration: none;
}
.back:hover {
  background: #fff;
  color: #756969;
}
.update{
  font-size: 1em;
  padding: 10px 30px;
  color: #fff;
  background: #830707;
  border: 1px solid #830707;
  border-radius: 5px;
}
.update:hover {
  background: #fff;
  color: #830707;
}
form{
  background-color: #efeded;
  padding:30px 50px;
  border-radius: 0 0 10px 10px;
}
textarea{
  width: 550px;
  height: 50px;
}
.col{
  width: 130px
}

